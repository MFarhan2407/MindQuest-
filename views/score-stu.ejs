<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Score</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <%- include('partials/nav-bar-student.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <%- include('partials/side-bar-student.ejs') %>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                    
                        <div class="card">
                            <div class="card-header">
                                <h4>Your Overall Progress</h4>
                            </div>
                            <div class="card-body">
                                <p><strong>Total Correct Answers:</strong> <%= totalCorrect %></p>
                                
                                <h5 class="mt-4">Score by Subject:</h5>
                                <% Object.keys(scoreBySubject).forEach(subject => { %>
                                    <div class="row mb-2">
                                        <div class="col-6"><%= subject %></div>
                                        <div class="col-6">
                                            <span class="badge bg-success"><%= scoreBySubject[subject] %> Correct</span>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>

                        <div class="mt-4">
                            <a href="/mindquest/student/subject" class="btn btn-primary">Take Another Quiz</a>
                        </div>

                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>