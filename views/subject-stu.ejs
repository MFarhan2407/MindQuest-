<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      background-color: #f4f6f9;
      font-family: 'Montserrat', sans-serif;
    }

    .sidebar {
      min-height: 100vh;
      background-color: #2f2f2f;
      color: white;
    }

    .sidebar a {
      color: #fff;
      text-decoration: none;
      display: block;
      padding: 12px 20px;
      transition: 0.3s;
    }

    .sidebar a:hover {
      color: #1abc9c;
    }

    .card {
      border-radius: 12px;
      border: 2px solid #1abc9c;
      transition: 0.3s;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
    }

    .card-title {
      color: #2f2f2f;
      font-weight: 600;
    }

    .btn-success {
      background-color: #1abc9c;
      border: none;
    }

    .btn-success:hover {
      background-color: #16a085;
    }

    .table thead {
      background-color: #1abc9c;
      color: #fff;
    }
  </style>
</head>

<body class="bg-light">

  <%- include('partials/nav-bar-student.ejs') %>

  <div class="container-fluid">
    <div class="row">

      <%- include('partials/side-bar-student.ejs') %>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
        <h1 class="mb-4 text-center text-uppercase fw-bold" style="color:#1abc9c;">Available Subject</h1>
        <div class="row">
          <% subject.forEach(el => { %>
            <div class="col-md-4 mb-3">
              <div class="card shadow-sm">
                <div class="card-body">
                  <h5 class="card-title"><%= el.title %></h5>
                  <p class="card-text">Complete the challenge now!</p>
                  <a href="/mindquest/student/subject/challenge/<%= el.id %>" class="btn btn-success">Go</a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
