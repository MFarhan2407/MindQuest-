<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      background-color: #f4f6f9;
      font-family: 'Montserrat', sans-serif;
    }

    .sidebar {
      min-height: 100vh;
      background-color: #2f2f2f;
      color: white;
    }


    .sidebar a {
      color: #fff;
      text-decoration: none;
      display: block;
      padding: 12px 20px;
      transition: 0.3s;
    }

    .sidebar a:hover {
      /* background: rgba(255, 255, 255, 0.1);
       */
      color: #1abc9c;
    }

    .card-outline {
      border: 2px solid;
      border-radius: 12px;
      transition: 0.3s;
    }

    .card-outline:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
    }

    .card-subject {
      border-color: #1abc9c;
    }

    .card-challenge {
      border-color: #474e5d;
    }

    .card-student {
      border-color: #0d6efd;
    }

    .table thead {
      background-color: #474e5d;
      color: #fff;
    }
  </style>
</head>

<body>
  <%- include('partials/nav-bar.ejs') %>

  <div class="container-fluid">
    <div class="row">
      <nav class="col-md-2 col-lg-2 sidebar">
        <%- include('partials/side-bar.ejs') %>
      </nav>

      <main class="col-md-9 col-lg-10 ms-sm-auto px-4 py-5">
        <h1 class="mb-4 text-center text-uppercase fw-bold" style="color:#1abc9c;">Dashboard</h1>

    <div class="row mb-5 text-center">
      <div class="col-md-4">
        <div class="card card-outline card-subject">
          <div class="card-body">
            <i class="bi bi-journal-bookmark fs-1" style="color:#1abc9c;"></i>
            <h5 class="card-title mt-2">Subjects</h5>
            <h2><%= subjects.length %></h2>
            <p class="card-text text-muted">Updated just now</p>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card card-outline card-challenge">
          <div class="card-body">
            <i class="bi bi-trophy fs-1" style="color:#474e5d;"></i>
            <h5 class="card-title mt-2">Challenges</h5>
            <h2><%= challenge.length %></h2>
            <p class="card-text text-muted">Updated just now</p>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card card-outline card-student">
          <div class="card-body">
            <i class="bi bi-people fs-1 text-primary"></i>
            <h5 class="card-title mt-2">Students</h5>
            <h2><%= students.length %></h2>
            <p class="card-text text-muted">Updated just now</p>
          </div>
        </div>
      </div>
    </div>

    <div class="card shadow-lg">
      <div class="card-header text-white" style="background-color:#1abc9c;">
        Registered Students
      </div>
      <div class="card-body">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th>No</th>
              <th>Full Name</th>
              <th>Email</th>
              <th>Role</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach((s, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= s.username %></td>
                <td><%= s.email %></td>
                <td><%= s.role %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    </main>
  </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>