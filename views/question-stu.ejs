<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Challenge</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            overflow-x: hidden;
        }

        .sidebar {
            min-height: 100vh;
        }

        .sidebar .nav-link {
            font-weight: 500;
            color: #ddd;
        }

        .sidebar .nav-link:hover {
            color: #fff;
            background: rgba(255, 255, 255, 0.1);
        }

        .sidebar .nav-link.active {
            color: #fff;
            background-color: #0d6efd;
        }
    </style>
</head>

<body class="bg-light">

    <%- include('partials/nav-bar-student.ejs') %>

        <div class="container-fluid">
            <div class="row">

                <%- include('partials/side-bar-student.ejs') %>


                    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                        <div class="row">

                            <h1>Soal <%= subject.title %>
                            </h1>

                            <form action="/mindquest/student/subject/challenge/<%= subject.id %>" method="POST">
                                <% subject.Challenges.forEach((challenge, index)=> { %>
                                    <div style="margin-bottom: 20px;">
                                        <p><strong>
                                                <%= index + 1 %>. <%= challenge.question %>
                                            </strong></p>

                                        <label>
                                            <input type="radio" name="answers[<%= challenge.id %>]" value="A" required>
                                            A. <%= challenge.optionA %>
                                        </label><br>

                                        <label>
                                            <input type="radio" name="answers[<%= challenge.id %>]" value="B">
                                            B. <%= challenge.optionB %>
                                        </label><br>

                                        <label>
                                            <input type="radio" name="answers[<%= challenge.id %>]" value="C">
                                            C. <%= challenge.optionC %>
                                        </label><br>

                                        <label>
                                            <input type="radio" name="answers[<%= challenge.id %>]" value="D">
                                            D. <%= challenge.optionD %>
                                        </label>
                                    </div>
                                    <% }) %>

                                        <button>Kirim Jawaban</button>
                            </form>


                        </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>